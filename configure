#!/bin/sh

set -e

echo "$0"

srcdir="$(cd "$(dirname "$0")" && pwd)"

while [ $# -gt 0 ]; do
    case "$1" in
        --host)
            HOST="$2"
            shift 2
            ;;
        --prefix)
            PREFIX="$2"
            shift 2
            ;;
        --target)
            TARGET="$2"
            shift 2
            ;;
        *)
            echo "unknown argument : $@"
            exit 1
            ;;
    esac
done

cp "${srcdir}/Makefile" ./

echo "## gen by configure" > configure.mk
echo "srcdir = ${srcdir}" >> configure.mk
echo "PREFIX = ${PREFIX}" >> configure.mk
